<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockActivity">


    <com.example.hp.myapplication.ProgressRing
        android:id="@+id/pr_progress"
        android:layout_width="247dp"
        android:layout_height="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:pr_bg_end_color="@color/bg_ring"
        app:pr_bg_mid_color="@color/bg_ring"
        app:pr_bg_start_color="@color/bg_ring"
        app:pr_progress_end_color="#FAB528"
        app:pr_progress_start_color="#FCD057"
        app:pr_progress_width="10dp"
        tools:pr_progress="80"
        tools:pr_show_text="00:00:00" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="临时终止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>

